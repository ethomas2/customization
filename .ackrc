# vim stuff (swap files and such)
--ignore-file=match:swp
--ignore-file=match:swo
--ignore-file=match:swn

# C stuff (haven't worked in C forever)
--ignore-file=match:asm
--ignore-file=match:sym
--ignore-file=match:tags  # Ctags

# python stuff
--ignore-file=match:.coverage
--ignore-dir=venv

# go stuff
--ignore-dir=vendor

# js stuff
--ignore-file=match:.json
--ignore-file=match:.eslintcache
--ignore-dir=bundles

# other
--ignore-file=match:.gitignore
--ignore-dir=.git
--ignore-dir=dist
--ignore-dir=assets
--ignore-file=match:tags
--ignore-file=match:ipynb
--ignore-file=match:.log
--ignore-dir=.direnv

# Common local files
--ignore-file=match:tasks.md
--ignore-file=match:notes
--ignore-file=match:notes.md
--ignore-file=match:record.md
--ignore-dir=utility
--ignore-dir=utility.tmp
--ignore-dir=scrap
--ignore-file=match:quickfix.list

# Redefine js to include jsx, tsx and ts
--type-set=js:ext:js,jsx,tsx,ts
--type-set=jsx:ext:js,jsx,tsx,ts

# Redefine css to include scss
--type-set=css:ext:css,scss

--type-add=ts:ext:ts # Idk if this is useful
